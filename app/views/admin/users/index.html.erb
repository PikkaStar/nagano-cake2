<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="title">会員一覧</h2>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.first_name %>
                <%= user.last_name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td><%= is_active?(user) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>